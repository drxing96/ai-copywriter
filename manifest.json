{
  "manifest_version": 3,
  "name": "CodeSpin.AI Chat",
  "version": "1.0",
  "description": "Allow ChatGPT and Claude to edit your local project files",
  "permissions": ["storage", "activeTab", "webRequest"],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*"
      ],
      "js": ["dist/index.js"],
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dist/*"],
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*"
      ]
    }
  ]
}
